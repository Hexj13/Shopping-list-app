<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar_actionbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="?android:actionBarSize"
                                   android:background="@color/colorPrimary"
                                   app:theme="@style/ShoppingListTheme">
    <ImageButton android:id="@+id/toolbar_back_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_keyboard_backspace_36dp"
                 android:layout_gravity="start|center_vertical"
                 android:layout_marginStart="12dp"
                 android:layout_marginLeft="12dp"
                 android:background="@null"/>

    <TextView android:id="@+id/toolbar_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/toolbarTitle"
              android:textColor="@color/toolbarTextColor"
              style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
              android:layout_gravity="center"/>

    <ImageView android:id="@+id/toolbar_delete_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_delete_36dp"
               android:layout_gravity="end|center_vertical"
               android:layout_marginEnd="12dp"
               android:layout_marginRight="12dp"/>
</android.support.v7.widget.Toolbar>